<Application x:Class="KotonohaAssistant.Alarm.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KotonohaAssistant.Alarm"
             xmlns:converter="clr-namespace:KotonohaAssistant.Alarm.Converters"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <converter:TotalSecondsToDisplayTimeConverter x:Key="TotalSecondsToDisplayTimeConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
