<ui:FluentWindow x:Class="KotonohaAssistant.Alarm.Controls.AddAlarmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KotonohaAssistant.Alarm.Controls"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="AddAlarmDialog" MaxHeight="120" MaxWidth="350">
    <Grid Margin="30" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <ComboBox x:Name="Hour" Width="100" Margin="10"/>
            <ui:NumberBox x:Name="Minute" Width="200" Minimum="0" Maximum="59" MaxDecimalPlaces="0" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <ui:Button x:Name="VoiceFile" Click="VoiceFile_Click" VerticalAlignment="Center" Margin="10">Open...</ui:Button>
            <TextBlock x:Name="FilePath" VerticalAlignment="Center" Margin="10" />
        </StackPanel>
        <CheckBox Grid.Row="2" x:Name="IsRepeated">Repeat</CheckBox>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="70" Margin="0 0 10 0" Click="OKButton_Click"/>
            <Button Content="Cancel" Width="70" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>