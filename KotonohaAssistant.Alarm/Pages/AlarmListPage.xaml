<Page x:Class="KotonohaAssistant.Alarm.Pages.AlarmListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KotonohaAssistant.Alarm.Pages"
      xmlns:vm="clr-namespace:KotonohaAssistant.Alarm.ViewModels"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:models="clr-namespace:KotonohaAssistant.Alarm.Models"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AlarmListPage"
      d:DataContext="{d:DesignInstance vm:AlarmListViewModel, IsDesignTimeCreatable=True}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ui:ListView ItemsSource="{Binding AlarmSettings, Mode=TwoWay}"
                     SelectedIndex="{Binding SelectedAlarmIndex, Mode=TwoWay}"
                     Grid.Row="0">
            <ui:ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:AlarmSetting}">
                    <Grid Margin="8,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="60" />
                        </Grid.ColumnDefinitions>
                        <Ellipse x:Name="Ellipse"
                                 Grid.RowSpan="2"
                                 Width="32"
                                 Height="32"
                                 Margin="6"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Fill="{ui:ThemeResource ControlStrongStrokeColorDefaultBrush}">
                        </Ellipse>
                        <ui:Button Icon="{ui:SymbolIcon Play12}"
                                   Command="{Binding DataContext.PlayCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                   CommandParameter="{Binding Id}"
                                   Grid.RowSpan="2"
                                   FontSize="20" />
                        <ui:TextBlock Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="12,6,0,0"
                                      FontWeight="Bold"
                                      Text="{Binding TimeInSeconds, Converter={StaticResource TotalSecondsToDisplayTimeConverter}, Mode=OneWay}" />
                        <ui:TextBlock Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="12,0,0,6"
                                      Text="{Binding VoicePath, Converter={StaticResource FilePathToFileNameConverter}, Mode=OneWay}" />
                        <ui:ToggleSwitch Grid.RowSpan="2"
                                         Grid.Column="2"
                                         IsChecked="{Binding IsEnabled, Mode=TwoWay}"/>
                    </Grid>
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>
        <StackPanel Grid.Row="1"
                    Margin="10,0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <ui:Button x:Name="StopButton"
                       HorizontalAlignment="Right"
                       Margin="10,0"
                       Command="{Binding StopCommand}">
                Stop
            </ui:Button>
            <ui:Button x:Name="AddButton"
                       HorizontalAlignment="Right"
                       Margin="10,0"
                       Command="{Binding AddCommand}">
                Add
            </ui:Button>
            <ui:Button x:Name="DeleteButton"
                       HorizontalAlignment="Right"
                       Margin="10,0"
                       Command="{Binding DeleteCommand}">
                Delete
            </ui:Button>
        </StackPanel>

    </Grid>
</Page>
