<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KotonohaAssistant.Vui"
             xmlns:components="clr-namespace:KotonohaAssistant.Vui.Components"
             xmlns:pages="clr-namespace:KotonohaAssistant.Vui.Components.Pages"
             x:Class="KotonohaAssistant.Vui.MainPage">

    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type pages:Chat}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
