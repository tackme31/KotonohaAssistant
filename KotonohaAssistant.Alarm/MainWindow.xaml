<ui:FluentWindow 
    x:Class="KotonohaAssistant.Alarm.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:KotonohaAssistant.Alarm"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:page="clr-namespace:KotonohaAssistant.Alarm.Pages"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=False}"
    Title="MainWindow" Height="800" Width="400">
    <Grid>
        <ui:NavigationView x:Name="Menu"
                           MinHeight="300"
                           Margin="0,50,0,0"
                           PaneDisplayMode="LeftFluent"
                           PaneTitle="Pane Title">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Alarm"
                                       Icon="{ui:SymbolIcon ClockAlarm20}"
                                       TargetPageType="{x:Type page:AlarmListPage}" />
                <ui:NavigationViewItem Content="Timer"
                                       Icon="{ui:SymbolIcon Timer24}"
                                       TargetPageType="{x:Type page:TimerPage}" />
            </ui:NavigationView.MenuItems>
        </ui:NavigationView>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="Alarm app"
            Margin="4">
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
