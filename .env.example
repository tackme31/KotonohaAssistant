#=========== OpenAI設定 ===========
# OpenAIのAPIキー
OPENAI_API_KEY=xxx
# 使用モデル名
OPENAI_MODEL=gpt-5-chat-latest


#=========== カレンダー機能 ===========
ENABLE_CALENDAR_FUNCTION=false
# GoogleのS認証情報ファイルのパス
# 作成方法などの詳しい情報は以下を参照してください
# https://developers.google.com/workspace/guides/create-credentials
GOOGLE_API_KEY=/path/to/google-api-secret-key.json
# カレンダーの予定の取得先のID
CALENDAR_ID=xxx@example.com


#=========== 天気機能 ===========
ENABLE_WEATHER_FUNCTION=false
# Open Weather MapのAPIキー
OWM_API_KEY=xxx
# 天気を取得する場所の緯度経度
OWM_LAT=35.68
OWM_LON=139.79


#=========== アラーム・タイマー機能 ===========
# アラーム音声のファイルのパス
ALARM_SOUND_FILE=assets/Clock-Alarm02-1(Loop).mp3


# =========== LINE通知設定 ===========
# 非アクティブ通知を有効にする
ENABLE_INACTIVITY_NOTIFICATION=false
# LINEチャネルアクセストークン
LINE_CHANNEL_ACCESS_TOKEN=xxx
# 通知先のLINEユーザーID
LINE_USER_ID=xxx
# 非アクティブ期間の閾値（日数）
INACTIVITY_NOTIFY_INTERVAL_DAYS=7
# 通知チェック時刻（時:分、24時間形式）
INACTIVITY_NOTIFY_TIME=09:00

#=========== その他設定 ===========
# 姉妹それぞれのスピーカー出力を分ける設定（左右ステレオ出力）
ENABLE_CHANNEL_SWITCHING=false